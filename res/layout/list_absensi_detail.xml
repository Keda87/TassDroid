<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/detail_absen_detail_pertemuan"
            android:id="@+id/tvLabelDetailAbsenPertemuan"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp" android:layout_marginTop="2dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="[pertemuan]"
            android:id="@+id/tvDetailAbsenPertemuan" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/tvLabelDetailAbsenPertemuan"
            android:layout_marginLeft="4dp" android:layout_marginTop="2dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="[status kehadiran]"
            android:id="@+id/tvDetailAbsenStatus"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="3dp" android:layout_marginTop="2dp"/>
</RelativeLayout>