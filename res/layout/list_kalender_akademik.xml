<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background_normal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="6dp">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="[nama kegiatan]"
            android:id="@+id/calKegiatan" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="3dp" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="[tanggal mulai] - [tanggal akhir]"
            android:id="@+id/calTanggal" android:layout_below="@+id/calKegiatan" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="3dp" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/detail_absen_semester"
            android:id="@+id/calSemesterLabel" android:layout_below="@+id/calTanggal" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="3dp" android:textColor="#ff000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=": [semester]"
            android:id="@+id/calSemester" android:layout_below="@+id/calTanggal"
            android:layout_toRightOf="@+id/calSemesterLabel" android:layout_marginTop="3dp" android:textColor="#ff000000"/>
</RelativeLayout>